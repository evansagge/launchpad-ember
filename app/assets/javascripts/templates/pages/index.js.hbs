<h1>Users</h1>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each controller}}
      <tr>
        <td>{{id}}</td>
        <td>{{#linkTo 'users.show' this}}{{email}}{{/linkTo}}</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>